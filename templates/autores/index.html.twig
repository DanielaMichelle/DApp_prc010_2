{% extends 'base.html.twig' %}

{% block title %}Autores index{% endblock %}

{% block body %}
    <h1 class"h1">Autores index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autore in autores %}
            <tr>
                <td>{{ autore.id }}</td>
                <td>{{ autore.title }}</td>
                <td>{{ autore.author }}</td>
                <td>{{ autore.year }}</td>
                <td>
                    <a class="btn btn-outline-dark" href="{{ path('autores_show', {'id': autore.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('autores_edit', {'id': autore.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('autores_new') }}">Create new</a>
{% endblock %}
